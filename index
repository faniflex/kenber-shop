    <script>
        function fetchData() {
            fetch('http://yourwebsite.com/getData.php')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('soilMoisture').innerText = data.soilMoisture;
                    document.getElementById('temperature').innerText = data.temperature + ' Â°C';
                    document.getElementById('humidity').innerText = data.humidity + ' %';
                });
        }

        function controlPump(command) {
            fetch('http://yourwebsite.com/controlPump.php?command=' + command)
                .then(() => alert('Pump turned ' + command));
        }

        setInterval(fetchData, 5000); // Fetch data every 5 seconds
        fetchData(); // Initial fetch
